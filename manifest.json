  {
   "manifest_version": 3,
   "name": "Facebook Image Downloader",
   "version": "1.0",
   "description": "Downloads images from specified Facebook posts.",
   "permissions": [
     "activeTab",
     "downloads",
     "scripting",
     "storage"
   ],
   "action": {
     "default_popup": "popup.html"
   },
   "background": {
     "service_worker": "background.js"
   },
   "content_scripts": [
     {
       "matches": [
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "https://www.web.facebook.com/*",
         "https://web.facebook.com/*"
      ],
       "js": ["content.js"]
     }
   ]
 }
 